<Arena>:
    BoxLayout:
        canvas:
            Rectangle:
                source: 'arena.jpg'
                size: self.size
                pos: self.pos
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.6, 1
            Label:
                id: label
                markup: True
                size_hint: 1, 1
            Label:
                id: label2
                markup: True
                size_hint: 1, 1
            Label:
                id: label3
                markup: True
                size_hint: 1, 1

        ScrollView:
            size_hint: 0.4, 1
            do_scroll_x: False
            BoxLayout:
                orientation: 'vertical'
                id: armor
                size_hint: (1, .5)
                Button:
                    text: 'Normal Attack'
                    on_press:
                        root.choose_attack("normal")
                        root.battle()
                    size_hint: 1, 1
                Button:
                    text: 'Strong Attack'
                    on_press:
                        root.choose_attack("strong")
                        root.battle()
                    size_hint: 1, 1
                Button:
                    text: 'Light Attack'
                    on_press:
                        root.choose_attack("light")
                        root.battle()
                    size_hint: 1, 1
                Button:
                    text: 'Defend'
                    on_press:
                        root.choose_attack("defend")
                        root.battle()
                    size_hint: 1, 1

    BoxLayout:
        size_hint: 1,1
        Button:
            text: 'Back'
            on_press: root.manager.current = 'gamescrean'
            size_hint: 0.1, 0.1
        Button:
            text: 'Start battle'
            on_press: root.update()
            size_hint: .1, 0.1