<GameScrean>:
    BoxLayout:
        canvas:
            Rectangle:
                source: 'bg.png'
                size: self.size
                pos: self.pos
        ScrollView:
            size_hint: 0.3, 1
            do_scroll_x: False
            BoxLayout:
                orientation: 'vertical'
                id: left_box
                size_hint: (1, None)
        BoxLayout:
            orientation: 'vertical'
            id: central_box
            size_hint: 0.4, 1
            Label:
                id: label1
                markup: True
                size_hint: 1, 1

        ScrollView:
            size_hint: 0.3, 1
            do_scroll_x: False
            BoxLayout:
                orientation: 'vertical'
                id: right_box
                size_hint: (1, None)


    BoxLayout:
        id: bottom
        size_hint: 1, 0.1
        Button:
            id: btn1
            text: 'Main'
            on_release:
        Button:
            text: 'Sleep'
            on_press: root.sleep()
        Button:
            text: 'Equipment'
            on_press: app.root.current = 'eq'
        Button:
            text: 'Shop'
            on_press: app.root.current = 'Shop'
        Button:
            text: 'Arena'
            on_press: app.root.current = 'Arena'
        Button:
            text: 'Save'
            on_press: root.save_game()

        Button:
            text: 'Quit'
            on_press: root.manager.current = 'MainMenu'


<MainMenu>:
    BoxLayout:
        canvas:
            Rectangle:
                source: 'bg.png'
                size: self.size
                pos: self.pos
        BoxLayout:
            size_hint: 0.5,1
            Button:
                text: 'New Game'
                on_press:
                    root.manager.current = 'gamescrean'

                size_hint: 0.1, 0.1
            Button:
                text: 'Load Game'
                on_press:
                    root.load_game()
                    root.manager.current = 'gamescrean'
                size_hint: 0.1, 0.1
            Button:
                text: 'Quit Game'
                on_press: app.stop()
                size_hint: 0.1, 0.1


